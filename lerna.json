{
  "packages": ["packages/*"],
  "version": "independent",
  "hoist": true,
  "stream": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": ["*.md", "**/docs/*"],
      "registry": "https://registry.npmjs.org"
    },
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): publish"
    }
  },
  "bootstrap": {
    "npmClientArgs": ["--no-package-lock"]
  }
}
