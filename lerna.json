{
  "packages": ["packages/*"],
  "version": "independent",
  "hoist": true,
  "stream": true,
  "command": {
    "publish": {
      "ignoreChanges": ["*.md"],
      "registry": "https://registry.npmjs.org",
      "message": "chore(release): publish"
    }
  },
  "bootstrap": {
    "npmClientArgs": ["--no-package-lock"]
  }
}
