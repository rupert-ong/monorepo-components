{
  "name": "base",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for base library. Used for testing and experimentation.",
  "main": "index.js",
  "scripts": {
    "init": "npm run bootstrap && npm run build",
    "build": "lerna run build",
    "test": "jest --coverage",
    "test:ci": "npm run test -- --maxWorkers=4",
    "test:watch": "jest --watch",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "lint": "eslint --fix \"./packages/**/*.{js,jsx,ts,tsx,json}\"",
    "format": "prettier --write \"./packages/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "deploy": "npm run build-storybook && gh-pages -d storybook-static",
    "bootstrap": "lerna bootstrap --hoist",
    "prepublish": "npm run init",
    "publish": "lerna publish",
    "postpublish": "lerna publish from-package --yes || exit 0",
    "publish:ci": "npm run publish -- --yes",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@storybook/addon-actions": "^6.3.0-alpha.22",
    "@storybook/addon-essentials": "^6.3.0-alpha.22",
    "@storybook/addon-links": "^6.3.0-alpha.22",
    "@storybook/addon-storysource": "^6.3.0-alpha.22",
    "@storybook/react": "^6.3.0-alpha.22",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@types/jest": "^26.0.23",
    "@types/react": "^16.14.5",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "babel-loader": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jest-dom": "^3.8.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gh-pages": "^3.1.0",
    "husky": "^6.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "react": "16.x",
    "react-dom": "16.x",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "packages/**/*.{js,jsx,ts,tsx,json}": [
      "eslint --fix"
    ],
    "packages/**/*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
